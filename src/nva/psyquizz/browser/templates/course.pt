<div tal:define="baseurl view.url(context)">
  <h1 tal:content="context.name" />

  <h2 tal:content="view.quizz_name" />

  <h3>Befragungen</h3>
  <ul>
    <li tal:repeat="session context.sessions">
    <a tal:attributes="href '%s/sessions/%s' % (baseurl, session.id)"> Startdatum: <span tal:content="session.startdate" /> </a> <br>
      <a target="_blank" tal:attributes="href '%s/quizz/generic-%s' % (view.application_url(), session.id)"> Link fÃ¼r den Fragebogen (Bitte an Teilnehmer/Benutzer verteilen) </a><br>
      <span tal:content="'%s/quizz/generic-%s' % (view.application_url(), session.id)"></span> 
    </li>
  </ul>
  <div tal:condition="view.criterias">
  <h3>Kriterien</h3>
  <div tal:repeat="crit view.criterias.keys()">
    <h3 tal:content="crit" />
    <ul>
      <li tal:repeat="val view.criterias[crit]" tal:content="val" />
    </ul>
  </div>
</div>
</div>
