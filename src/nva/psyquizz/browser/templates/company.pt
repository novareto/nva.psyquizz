<div tal:define="baseurl view.url(context)">
  <h1 tal:content="context.name" />
    <div tal:condition="list(context.courses)">
  <h2>Befragungen</h2>
  <ul>
    <li tal:repeat="course context.courses">
      <a tal:attributes="href '%s/%s' % (baseurl, course.id)"
	 tal:content="course.name" />
    </li>
  </ul>
</div>
</div>
